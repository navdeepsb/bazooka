extends ../layout

block body
	h1 #{ appName } admin panel

	p #[a( href="/admin/panel" ) Admin home] &nbsp; #[a( href="/admin/team/create" ) + Add] &nbsp; #[a( href="/admin/logout" ) Logout]

	h2 All teams

	if teams.length == 0
		p No teams found
	else
		ol
			each team in teams
				li #{ team.name } &middot; #[a( href="/admin/team/update?id=#{ team._id }" ) edit] &middot; #[a( href="/admin/team/delete?id=#{ team._id }" ) delete]